{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "paths": {
      "*": ["src/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
